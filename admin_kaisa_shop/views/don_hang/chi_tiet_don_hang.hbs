<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title mb-3">Thông tin đơn hàng</strong>
                        </div>

                        <div class="card-body">

                            <h5>Mã đơn hàng : {{detailOrder._id}}</h5>
                            <h5>Tình trạng : <span class="badge badge-danger">{{detailOrder.tinhTrang}}</span> <td>
                                    <span class="badge badge-primary" data-toggle="modal" data-target="#changeStatus">Thay đổi</spandata-toggle="modal" data-target="#editProfile">
                                </td>
                            </h5>
                            <h5>Ngày giao : Ngày {{detailOrder.ngayGiao.ngay}}, tháng {{detailOrder.ngayGiao.thang}},
                                năm {{detailOrder.ngayGiao.nam}}</h5>
                            <h5>Tổng tiền : {{detailOrder.tongTien}}</h5>
                            <h5>Số lượng : {{detailOrder.soSanPham}}</h5>
                            <h5>Người mua : {{detailOrder.tenNguoiMua}}</h5>
                             <h5>Người đặt : {{detailOrder.nguoiMua}}</h5>
                            <h5>Số điện thoại : {{detailOrder.dienThoai}}</h5>
                            <h5>Địa chỉ : {{detailOrder.diaChi}}</h5>

                        </div>
                        <div class="card-footer">
                            <div class="card-header">
                                <strong class="card-title mb-3">Danh sách sản phẩm</strong>
                            </div>
                            <div class="row card-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <td></td>
                                            <td>Tên Sản Phẩm</td>
                                            <td>Giá</td>
                                            <td>Số lượng</td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each detailOrder.dsSanPham}}
                                        <tr>
                                            <td></td>
                                            <td>{{ten}}</td>
                                            <td>{{gia}}</td>
                                            <td>{{soLuong}}</td>

                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- The Modal -->
<div class="modal fade" id="changeStatus">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thay Avatar</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form action="/update_status_order/{{detailOrder._id}}" method="POST">
                    <td>
                        <div class="form-group">
                            <select class=" form-control"  name="orderStatus">
                                <option {{selectedStatus 'Chờ xử lý' detailOrder.tinhTrang}}>Chờ xử lý</option>
                                <option {{selectedStatus 'Đang giao' detailOrder.tinhTrang}}>Đang giao</option>
                                <option {{selectedStatus 'Đã giao' detailOrder.tinhTrang}}>Đã giao</option>
                                <option {{selectedStatus 'Hủy đơn hàng' detailOrder.tinhTrang}}>Hủy đơn hàng</option>
                            </select>

                        </div>
                    </td>

    
                        <!-- Modal footer -->
                        <div class="modal-footer">

                            <button type="button" class="btn btn-danger" data-dismiss="modal">Thoát</button>
                            <button type="submit" class="btn btn-success">Cập nhật</button>
                        </div>
                    </form>

            </div>


        </div>
    </div>
</div>