<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title mb-3">Thông tin tài khoản</strong>
                        </div>
                        <div class="card-body">
                            <div class="mx-auto d-block">
                                <img class="rounded-circle mx-auto d-block" src="images/icon/avatar-01.jpg"
                                    alt="Card image cap">
                                <h5 class="text-sm-center mt-2 mb-1">{{profile.name}}</h5>
                                <div class="location text-sm-center">
                                    <i class="fa fa-map-marker"></i> 
                                    {{profile.address}}
                                </div>
                                <div class="location text-sm-center">
                                    <i class="fas fa-mobile-alt"></i>
                                    {{profile.phone}}
                                </div>
                                    
                                <div class="location text-sm-center">
                                   <i class="fas fa-birthday-cake"> </i>
                                     {{profile.birthday}}
                                 </div>
                                 <div class="location text-sm-center">
                                   <i class="fas fa-at"></i> 
                                   {{profile.company}}
                                 </div>
                                

                            </div>
                            <hr>
                            <div class="card-text text-sm-center">
                        

                                {{!-- <i class="fa fa-facebook pr-1" ></i> --}}
                                <i class="fas fa-edit" data-toggle="modal" data-target="#editProfile" style="font-size:36px"></i>
                    
                            </div>
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>
</div>
       <!-- The Modal -->
    <div class="modal fade" id="editProfile">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Tùy chỉnh thông tin tài khoản</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form action="/update_profile/{{profile._id}}" method="POST">
                        <div class="form-group">
                            <label for="name">Họ tên</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{profile.name}}">
                        </div>
                        <div class="form-group">
                            <label for="birthday">Ngày sinh</label>
                            <input type="text" class="form-control" id="birthday" name="birthday"  value="{{profile.birthday}}">
                        </div>
                        <div class="form-group">
                            <label for="phone">Số điện thoại</label>
                            <input type="text" class="form-control" id="phone" name="phone"  value="{{profile.phone}}">
                        </div>
                        <div class="form-group">
                            <label for="address">Địa chỉ</label>
                            <input type="text" class="form-control" id="address" name="address"  value="{{profile.address}}">
                        </div>
                        <div class="form-group">
                            <label for="company">Tên cửa hàng</label>
                            <input type="text" class="form-control" id="company" name="company"  value="{{profile.company}}">
                        </div>
            


                        <!-- Modal footer -->
                        <div class="modal-footer">

                            <button type="button" class="btn btn-danger" data-dismiss="modal">Thoát</button>
                            <button type="submit" class="btn btn-success">Lưu</button>
                        </div>
                    </form>

                </div>


            </div>
        </div>
    </div>