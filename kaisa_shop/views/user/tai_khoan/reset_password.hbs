<!DOCTYPE html>
<html lang="en">

<head>

	{{> elements/head_tag}}
</head>

<body>



	<!--================Login Box Area =================-->
	<section class="login_box_area section-margin">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<div class="hover">
							<h4>Bạn là người mới?</h4>
							<p>Trải nghiệm không gian mua sắm tuyệt vời cùng chúng tôi ngay</p>
							<a class="button button-account" href="/users/tai_khoan/dang_ky">Tạo Tài Khoản</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3>Kaisa Members</h3>
						<form class="row login_form" action="/users/tai_khoan/reset_password" method="post" id="contactForm">
							{{#if hasErrors}}
							<div class="col-md-12 form-group">
								<label type="text" id="err" name="name">
									<font color="red">
										MESS: {{messages}}
									</font>
								</label>
							</div>
							{{/if}}

							<div class="col-md-12 form-group">
								<input type="email" class="form-control" id="email" name="email" placeholder="Tài khoản"
									onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'">
							</div>														
							<div class="col-md-12 form-group">
								<button type="submit" value="submit" class="button button-login w-100">Reset Password</button>								
							</div>
						</form>						
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->

	<script href=".../public/js/main.js">
	</script>

	{{> elements/footers}}


	{{> elements/body_script}}

</body>

</html>