<!DOCTYPE html>
<html lang="en">

<head>

	{{> elements/head_tag}}
</head>

<body>

	<!--================Login Box Area =================-->
	<section class="login_box_area section-margin">
		<div class="container">
			<div class="row">
				
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3>Đổi mất khẩu</h3>
						<form class="row login_form" action="/users/tai_khoan/change_password" method="post" id="contactForm">
							{{#if hasErrors}}
							<div class="col-md-12 form-group">
								<label type="text" id="err" name="name">
									<font color="red">
										MESS: {{messages}}
									</font>
								</label>
							</div>
							{{/if}}

							<div class="col-md-12 form-group">
								<input type="password" class="form-control" id="pass" name="oldpassword"
									placeholder="Mật khẩu cũ" onfocus="this.placeholder = ''"
									onblur="this.placeholder = 'Old Password'">
							</div>		
                            <div class="col-md-12 form-group">
								<input type="password" class="form-control" id="pass" name="newpassword"
									placeholder="Mật khẩu mới" onfocus="this.placeholder = ''"
									onblur="this.placeholder = 'New Password'">
							</div>												
							<div class="col-md-12 form-group">
								<button type="submit" value="submit" class="button button-login w-100">Change Password</button>								
							</div>
						</form>						
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->

	<script href=".../public/js/main.js">
	</script>

	{{> elements/footers}}


	{{> elements/body_script}}

</body>

</html>